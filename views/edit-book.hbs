<div class="container">
	<div class="row">
		<div class="col s12 m6 offset-m3">
			<h3>Edit Book</h3>
			<br>
			<form action="/books/edit/{{book.id}}/?_method=PUT" method="POST">
				<label for="title">Title:</label>
				<input id="title" name="title" placeholder="{{book.title}}">
				<br>
				<br>
				<label for="genre">Genre:</label>
				<input id="genre" name="genre" placeholder="{{book.genre}}">
				<br>
				<br>
				<label for="desc">Description:</label>
				<textarea id="desc" name="desc" placeholder="{{book.desc}}" class="materialize-textarea"></textarea>
				<br>
				<br>
				<label for="image_url">Cover:</label>
				<input id="image_url" type="url" name="image_url" placeholder="{{book.image_url}}">
				<br>
				<button type="submit" class="waves-effect waves-light btn">Submit</button>
			</form>
		</div>
	</div>
</div>
