<div class="container">
  <div class="row">
    <div class="col s12 m6 offset-m3">
      <br>
      <br>
      <div class="card grey darken-2">
        <div class="card-content white-text">
          <span class="card-title">{{author.fname}} {{author.lname}}</span>
          <br>
          <br>
          <span>Books:</span>
          <br>
          <br>
          <ul class="books-list">
            {{#each books}}
              <li>{{title}}</li>
            {{/each}}
          </ul>
          <br>
          <br>
          <img src="{{author.image_url}}" width="100%" alt="Book Cover" />
          <br>
          <br>
          <p>
            {{author.bio}}
          </p>
        </div>
        <div class="card-action">
          <a href="/books/edit/{{author.id}}">
            <i class="fa fa-pencil-square-o"></i>
          </a>
          <a href="/books/delete/{{author.id}}">
            <i class="fa fa-remove"></i>
          </a>
        </div>
      </div>
    </div>
  </div>
</div>
