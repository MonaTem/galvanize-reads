<div class="container">
  <h1>Authors</h1>
  <div class="row authors-list">
    {{#each authors}}
      <div class="row">
        <div class="col s12 m12">
          <div class="card grey darken-2">
            <div class="card-content white-text">
              <span class="card-title"><a href="/authors/{{id}}">{{fname}} {{lname}}</a></span>
              <br>
              <span>Genre: {{genre}}</span>
              <br>
              <br>
              <span>Books Written:</span>
              <br>
              <br>
              <ul class="books-list">
                {{#each books}}
                  <li>{{title}}</li>
                {{/each}}
              </ul>
              <br>
              <br>
              <img src="{{image_url}}" width="200px" alt="Author Photo" />
              <br>
              <br>
              <p>
                {{bio}}
              </p>
            </div>
            <div class="card-action">
              <a href="/authors/edit/{{id}}">
                <i class="fa fa-pencil-square-o"></i>
              </a>
              <a href="/authors/delete/{{id}}">
                <i class="fa fa-remove"></i>
              </a>
            </div>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
  <a class="new" href="/authors/new">Add Author</a>
</div>
