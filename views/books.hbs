<div class="container">
	<section class="books">
		<h1>Books</h1>
		<div class="row books-list">
			{{#each books}}
				<div class="row">
					<div class="col s12 m12">
						<div class="card grey">
							<div class="card-content white-text">
								<span class="card-title">{{title}}</span>
								<br>
								<span>Genre: {{genre}}</span>
								<br>
								<br>
								<span>Authors:</span>
								<br>
								<br>
								<ul class="authors-list">
									{{#each authors}}
										<li>{{fname}} {{lname}}</li>
									{{/each}}
								</ul>
								<br>
								<br>
								<img src="{{image_url}}" width="200px" alt="Book Cover" />
								<br>
								<br>
								<p>
									{{desc}}
								</p>
							</div>
							<div class="card-action">
								<a href="/books/delete/{{id}}">
									<i class="fa fa-pencil-square-o"></i>
								</a>
								<a href="/books/delete/{{id}}">
									<i class="fa fa-remove"></i>
								</a>
							</div>
						</div>
					</div>
				</div>
			{{/each}}
		</div>
		<a class="new" href="/books/new">Add Book</a>
	</section>
</div>
